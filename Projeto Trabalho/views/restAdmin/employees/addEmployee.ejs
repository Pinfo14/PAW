<div class="container mt-4">
    <h2><i class="bi bi-person-plus-fill me-2"></i>Adicionar Funcionário</h2>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form action="/rest/employees/new" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Nome</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
  
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
  
      <div class="mb-3">
        <label for="password" class="form-label">Palavra-passe</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>
  
      <button type="submit" class="btn btn-success">
        <i class="bi bi-check-circle me-1"></i>Guardar Funcionário
      </button>
  
      <a href="/rest/employees" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left me-1"></i>Voltar
      </a>
    </form>
  </div>
  