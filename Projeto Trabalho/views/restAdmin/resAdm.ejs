
  <!-- Linha de cabeçalho: nome do restaurante e saudação -->
  <div class="row pb-3">
    <!-- Nome do restaurante -->
    <h1 class="display-5 text-primary"><%= restName %></h1>
    <!-- Saudação ao utilizador (e.g., email ou nome) -->
    <h2 class="mt-2">Olá, <%= userName %>&#128075</h2>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-bookmark-check-fill me-2"></i> Menus Ativos</h5>
        </div>
        <div class="card-body">
          <% if (activeMenus.length > 0) { %>
            <% activeMenus.forEach(menu => { %>
              <div class="mb-4">
                <h5 class="fw-bold text-primary mb-2"><%= menu.name %></h5>
                <a href="/rest/menu/<%= menu._id %>" class="btn btn-outline-secondary btn-sm mt-1">
                  <i class="bi bi-eye"></i> Ver detalhes
                </a>
                <hr>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-muted">Nenhum menu está ativo atualmente.</p>
            <a href="/rest/menu" class="btn btn-outline-primary btn-sm">Gerir menus</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
