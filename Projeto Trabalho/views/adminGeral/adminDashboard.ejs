    <button class="btn btn-light position-relative" type="button" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
      <i class="bi bi-bell-fill fs-4 text-primary"></i>
      <% if (pendingCount && pendingCount > 0) { %>
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
          <%= pendingCount %>
        </span>
      <% } %>
    </button>

    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="notificationDropdown" style="min-width: 300px;">
      <% if (pendingCount && pendingCount > 0) { %>
        <li class="dropdown-item">
          Existem <strong><%= pendingCount %></strong> pedido(s) de registo de restaurante.
          <br>
          <a href="/admin/restaurants?pending=true" class="link-primary">Ver Pedidos Pendentes</a>
        </li>
      <% } else { %>
        <li class="dropdown-item text-muted">Sem novas notificaÃ§Ãµes</li>
      <% } %>
    </ul>
  </div>
</div>
